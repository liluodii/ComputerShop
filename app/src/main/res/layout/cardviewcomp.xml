<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewcomplist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:layout_margin="1dp"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:id="@+id/cimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txtcDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="	#000000"
            android:layout_marginLeft="209dp"

            android:text="Description" />

        <TextView
            android:id="@+id/txtrating"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_below="@+id/txtcDescription"
            android:layout_marginLeft="322dp"
            android:textColor="#0000CD"
            android:layout_marginTop="20dp"
            android:text="rating" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="211dp"
           android:layout_below="@id/imgstar"
            android:textColor="#DC143C"
            android:text="price"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txtmsg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="25dp"
            android:layout_marginLeft="210dp"
            android:layout_below="@id/txtprice"
            android:text="Available Online" />

        <TextView
            android:id="@+id/txtmsg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtmsg1"
            android:layout_marginLeft="209dp"
            android:layout_marginBottom="20dp"
android:layout_marginTop="10dp"
            android:text="Available at nearby store" />

        <ImageView
            android:id="@+id/imgstar"
            android:layout_width="110dp"
            android:layout_height="27dp"
            android:layout_below="@id/txtcDescription"
            android:layout_marginLeft="209dp"
            android:layout_marginTop="20dp"

            android:scaleType="fitXY"
            cardview:srcCompat="@drawable/a5" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>