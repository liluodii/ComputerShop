<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <TextView
        android:id="@+id/txtpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:fontFamily="@font/black_ops_one"
        android:text="PAYMENT"
        android:paddingBottom="30dp"
        android:textSize="40dp"
        android:textAlignment="center"
        >
    </TextView>

    <TextView
        android:id="@+id/txtitemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textColor="#2C3E50"
        android:fontFamily="@font/aclonica"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txtpayment"/>
    <TextView
        android:id="@+id/txtitemnamedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Namedata"
android:fontFamily="@font/aclonica"
        android:textColor="#2C3E50"
        android:layout_marginLeft="140dp"
        android:textSize="18dp"
        android:layout_below="@+id/txtpayment"/>
    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/txtitemname"/>

    <TextView
        android:id="@+id/txtitemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="#2C3E50"
        android:textSize="18dp"
        android:fontFamily="@font/aclonica"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/spacer"/>
    <TextView
        android:id="@+id/txtitempricedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price "
        android:layout_marginLeft="140dp"
        android:textColor="#2C3E50"
        android:fontFamily="@font/aclonica"
        android:textSize="18dp"
        android:layout_below="@+id/spacer"/>
    <Space
        android:id="@+id/spacer1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtitemprice"/>
    <TextView
        android:id="@+id/txtpayemntmethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="#2C3E50"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/aclonica"
        android:textSize="18dp"
        android:layout_below="@+id/spacer1"/>
 <ImageView
     android:id="@+id/imgpayment"
     android:layout_width="180dp"
     android:layout_height="30dp"
     android:layout_marginLeft="200dp"
     android:scaleType="fitXY"
     app:srcCompat="@drawable/payment"
     android:layout_below="@id/spacer1"/>
    <Space
        android:id="@+id/spacer2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txtpayemntmethod"/>

    <EditText
        android:id="@+id/edtpaymentmethod"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer2"
        android:textColor="#2C3E50"
        android:layout_marginLeft="10dp"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"
        android:fontFamily="@font/aclonica"
        android:textSize="18dp" />
    <Space
        android:id="@+id/spacer3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtpaymentmethod"/>
    <TextView
        android:id="@+id/txtExpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:layout_marginLeft="10dp"
        android:textColor="#2C3E50"
        android:textSize="18dp"
        android:fontFamily="@font/aclonica"
        android:layout_below="@+id/spacer3"/>
    <TextView
        android:id="@+id/txtcvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textSize="20dp"
        android:textColor="#2C3E50"
        android:layout_marginLeft="220dp"
        android:fontFamily="@font/aclonica"
        android:layout_below="@+id/spacer3"/>
    <Space
        android:id="@+id/spacer4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txtExpdate"/>

    <EditText
        android:id="@+id/edtmonth"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer4"
        android:layout_marginLeft="10dp"
        android:textColor="#2C3E50"
        android:hint="Month"
        android:inputType="number"
        android:fontFamily="@font/aclonica"
        android:maxLength="2"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtyear"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer4"
        android:layout_marginLeft="90dp"
        android:hint="Year"
        android:textColor="#2C3E50"
        android:inputType="number"
        android:maxLength="2"
        android:fontFamily="@font/aclonica"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtcvv"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer4"
        android:layout_marginLeft="220dp"
        android:hint="3 Digit Number"
        android:textColor="#2C3E50"
        android:inputType="number"
        android:fontFamily="@font/aclonica"
        android:maxLength="3"
        android:textSize="18dp" />

    <Space
        android:id="@+id/spacer5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtmonth"/>

    <Button
        android:id="@+id/btnpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:textSize="25dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/black_ops_one"
        android:layout_below="@id/spacer5"
        />
</RelativeLayout>