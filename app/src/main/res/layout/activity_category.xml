<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a6"
    tools:context=".Category">


    <ImageView
        android:id="@+id/imgmostpopular"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/txtmostpopular"
        app:srcCompat="@drawable/popular" />

    <TextView
        android:id="@+id/txtmostpopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/black_ops_one"
        android:text="Most Popular"
        android:textColor="#000000"
        android:textSize="40dp"
        />

    <ImageView
        android:id="@+id/imglaptop"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txtlaptop"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/laptop4" />

    <ImageView
        android:id="@+id/imgacs"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:scaleType="fitXY"
        android:layout_below="@+id/txtacs"
        app:srcCompat="@drawable/accsss" />

    <ImageView
        android:id="@+id/imgdesktop"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        android:layout_marginLeft="200dp"

        android:scaleType="fitXY"
        android:layout_below="@id/txtdesktop"
        app:srcCompat="@drawable/desktop" />

    <TextView
        android:id="@+id/txtlaptop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/black_ops_one"
        android:text="Laptop"
        android:textColor="#000000"
        android:textSize="40dp"
        android:layout_below="@+id/imgmostpopular"
         />

    <TextView
        android:id="@+id/txtdesktop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/black_ops_one"
        android:text="Desktop"
        android:textColor="#000000"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/imgmostpopular"
        android:textSize="40dp"
         />

    <TextView
        android:id="@+id/txtacs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imglaptop"
        android:fontFamily="@font/black_ops_one"
        android:text="Accessories"
        android:textColor="#000000"
        android:textSize="40dp"
        />
</RelativeLayout>